{% extends 'back.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}

    <h1 style="text-align: center">Avis index</h1><br><br>

    <table class="table table-dark">
        <thead>
            <tr>

                <th>Description</th>
                <th>Date</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>

                <td>{{ avi.description }}</td>
                <td>{{ avi.date ? avi.date|date('Y-m-d') : '' }}</td>
                <td>{{ avi.categorie.type }}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
