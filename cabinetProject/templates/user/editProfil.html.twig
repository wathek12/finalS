        <label for="username" class="form-label">Email</label>
        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(registrationForm.email) }}
    </div>
        <label for="email" class="form-label">Nom</label>
        {{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(registrationForm.nom) }}                        </div>
    <div class="mb-3 form-password-toggle">
        <label class="form-label" for="password">Prenom</label>
        {{ form_widget(registrationForm.prenom, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(registrationForm.prenom) }}
    </div>
    <div class="mb-3 form-password-toggle">
        <label class="form-label" for="password">Adresse</label>
        {{ form_widget(registrationForm.adresse, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(registrationForm.adresse) }}
    </div>
    <div class="mb-3 form-password-toggle">
        <label class="form-label" for="password">Age</label>
        {{ form_widget(registrationForm.age, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(registrationForm.age) }}
    </div>



    <button type="submit" class="btn btn-primary d-grid w-100" formnovalidate>Modefier Profil</button>
    {{ form_end(registrationForm) }}

{% endblock %}


